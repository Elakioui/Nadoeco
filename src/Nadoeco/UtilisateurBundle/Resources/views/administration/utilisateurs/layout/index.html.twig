{% extends '::layout/layoutAdmin.html.twig' %}

{% block body -%}
    <h1>Utilisateurs list</h1>

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {%  for utilisateur in utilisateurs %}
            <tr>
                <td><a href="{{ path('categories_show', { 'id': utilisateur.id }) }}">{{ utilisateur.id }}</a></td>
                <td>{{ utilisateur.username }}</td>
                <td>
                    {% if utilisateur.adresses|length != 0 %}
                      <a href="{{ path('adminAdressesUtilisateur', { 'id': utilisateur.id }) }}" title="consulter les adresses"><i class="icon-book"></i></a>
                    {% endif %}
                    {% if utilisateur.commandes|length != 0 %}
                      <a href="{{ path('adminFacturesUtilisateur', { 'id': utilisateur.id }) }}" title="consulter les factures"><i class="icon-book"></i></a>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
